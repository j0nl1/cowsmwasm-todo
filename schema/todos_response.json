{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TodosResponse",
  "type": "object",
  "required": [
    "todos"
  ],
  "properties": {
    "todos": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Todo"
      }
    }
  },
  "definitions": {
    "Status": {
      "type": "string",
      "enum": [
        "OPEN",
        "COMPLETED"
      ]
    },
    "Todo": {
      "type": "object",
      "required": [
        "description",
        "status"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/Status"
        }
      }
    }
  }
}
